---
layout: default
---
<div class="post">
  <article>
    {% if page.profiles %}
      <div class="row">
        {% for profile in page.profiles %}
          <div class="col mb-4">
            <div class="card profile-card" style="height: 360px;">
              {% assign img_path = profile.image | default: 'assets/img/prof_pic.png' %}
              {% if img_path != '' %}
                <img src="{{ img_path | relative_url }}" class="card-img-top profile-card-img" alt="{{ profile.title | default: 'Profile Image' }}">
              {% endif %}
              <div class="card-body d-flex flex-column">
                <h5 class="card-title">{{ profile.title | default: profile.name }}</h5>
                <p class="card-text flex-grow-1">
                  {% if profile.description %}
                    {{ profile.description | truncatewords: 20 }}
                  {% else %}
                    {{ profile.excerpt | strip_html | truncatewords: 20 }}
                  {% endif %}
                </p>
                <a href="{{ profile.url | replace: 'index.html', '' | relative_url }}" class="btn btn-primary mt-auto">View Profile</a>
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    {% endif %}
  </article>
</div>
