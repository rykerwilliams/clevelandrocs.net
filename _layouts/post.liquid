---
layout: default
---
{% assign year = page.date | date: '%Y' %}
{% assign tags = page.tags | join: '' %}
{% assign categories = page.categories | join: '' %}
{% assign url_beginning = page.url | slice: 0, 10 %}
{%- comment -%}
  Link tags/categories when rendering articles or food items.
  We keep year linking only for articles archives to avoid confusing food with article year pages.
{%- endcomment -%}
{% assign link_meta = false %}
{% if url_beginning == '/articles/' or page.collection == 'food' or page.url contains '/food/' %}
  {% assign link_meta = true %}
{% endif %}

{% if page._styles %}
  <!-- Page/Post style -->
  <style type="text/css">
    {{ page._styles }}
  </style>
{% endif %}

<div class="post">
  <header class="post-header">
    <h1 class="post-title">{{ page.title }}</h1>
    <p class="post-meta">
      Created on {{ page.date | date: '%B %d, %Y' }}
      {% comment %} Render author(s): link to profile if a matching profile title exists, otherwise link to the authors index anchor /authors/#slug {% endcomment %}
      {% if page.author or page.authors %}
        by
        {% if page.author %}
          {% assign author_list = page.author | split: '||' %}
        {% elsif page.authors %}
          {% assign author_list = page.authors %}
        {% endif %}
        {% for a in author_list %}
          {% assign a = a | strip %}
          {% assign a_slug = a | slugify %}
          {% comment %}Find a profile by matching slugified title or slug/url containing the slug{% endcomment %}
          {% assign prof = null %}
          {% for p in site.profiles %}
            {% if prof == null %}
              {% assign p_title_slug = p.title | slugify %}
              {% assign p_slug = p.slug | default: '' %}
              {% assign p_url = p.url | default: '' %}
              {% if p_title_slug == a_slug or p_slug == a_slug or p_url contains a_slug %}
                {% assign prof = p %}
              {% endif %}
            {% endif %}
          {% endfor %}

          {% if prof %}
            <a href="{{ prof.url | relative_url }}">{{ a }}</a>
          {% else %}
            <a href="{{ '/authors/#' | append: a_slug | relative_url }}">{{ a }}</a>
          {% endif %}

          {% unless forloop.last %}, {% endunless %}
        {% endfor %}
      {% endif %}
      {% if page.last_updated %}, last updated on {{ page.last_updated | date: '%B %d, %Y' }}{% endif %}
      {% if page.meta %}â€¢ {{ page.meta }}{% endif %}
    </p>
    <p class="post-tags">
      {% if url_beginning == '/articles/' %}
        <a href="{{ year | prepend: '/articles/' | relative_url }}"> <i class="fa-solid fa-calendar fa-sm"></i> {{ year }} </a>
      {% else %}
        <i class="fa-solid fa-calendar fa-sm"></i> {{ year }}
      {% endif %}
      {% if tags != '' %}
        &nbsp; &middot; &nbsp;
        {% for tag in page.tags %}
          {% assign posts_with_tag = site.tags[tag] %}
          {% if link_meta and posts_with_tag and posts_with_tag != empty %}
            <a href="{{ tag | slugify | prepend: '/articles/tag/' | relative_url }}"> <i class="fa-solid fa-hashtag fa-sm"></i> {{ tag }} </a>
          {% else %}
            <i class="fa-solid fa-hashtag fa-sm"></i> {{ tag }}
          {% endif %}
          {% unless forloop.last %}
            &nbsp;
          {% endunless %}
        {% endfor %}
      {% endif %}

      {% if categories != '' %}
        &nbsp; &middot; &nbsp;
        {% for category in page.categories %}
          {% assign posts_in_category = site.categories[category] %}
          {% if link_meta and posts_in_category and posts_in_category != empty %}
            <a href="{{ category | slugify | prepend: '/articles/category/' | relative_url }}">
              <i class="fa-solid fa-tag fa-sm"></i> {{ category -}}
            </a>
          {% else %}
            <i class="fa-solid fa-tag fa-sm"></i> {{ category }}
          {% endif %}
          {% unless forloop.last %}
            &nbsp;
          {% endunless %}
        {% endfor %}
      {% endif %}
    </p>
  </header>

  <article class="post-content">
    {% if page.toc and page.toc.beginning %}
      <div id="table-of-contents">
        {% toc %}
      </div>
      <hr>
    {% endif %}
    <div id="markdown-content">
      {{ content }}
    </div>
  </article>

  {% if site.related_blog_posts and site.related_blog_posts.enabled %}
    {% if page.related_posts == null or page.related_posts %}
      {% include related_posts.liquid %}
    {% endif %}
  {% endif %}

  {% if site.disqus_shortname and page.disqus_comments %}
    {% include disqus.liquid %}
  {% endif %}
  {% if site.giscus and page.giscus_comments %}
    {% include giscus.liquid %}
  {% endif %}
</div>
