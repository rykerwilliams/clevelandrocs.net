<div class="col mb-4">
  <a href="{% if event.redirect %}{{ event.redirect }}{% else %}{{ event.url | relative_url }}{% endif %}">
    <div class="card h-100 hoverable">
      <div class="row no-gutters">
        {% if event.img %}
          <div class="col-md-6">
            {% include figure.liquid loading="eager" path=event.img sizes="(min-width: 768px) 156px, 50vw" alt="food thumbnail" class="card-img" %}
          </div>
        {% endif %}
        <div class="{% if event.img %}col-md-6{% else %}col-md-12{% endif %}">
          <div class="card-body">
            <h3 class="card-title">{{ event.title }}</h3>
            <p class="card-text">{{ event.description }}</p>
          </div>
        </div>
      </div>
    </div>
  </a>
</div>
